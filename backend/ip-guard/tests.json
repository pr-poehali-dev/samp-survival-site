{
  "tests": [
    {
      "name": "Check non-blocked IP",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "check_block",
        "ip": "192.168.1.1"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "blocked": false
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Record failed attempt",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "record_attempt",
        "ip": "192.168.1.2",
        "success": false
      },
      "expectedStatus": 200,
      "expectedBody": {
        "blocked": false,
        "attempts": 1
      },
      "bodyMatcher": "partial"
    }
  ]
}
